<Window x:Class="_06_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <ComboBox Name="ComboBoxAuthor" Width="784" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left"></ComboBox>

        <Label Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,20" >Введіть Назву книги для пошуку ::</Label>
        <TextBox Name="BookTitle"   Width="400" Height="20" Margin="10,50" VerticalAlignment="Top" HorizontalAlignment="Left" TextChanged="BookTitle_TextChanged" ></TextBox>

        <Label Width="140" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,80" >Відфільтровані книги ::</Label>
        <ListBox Name="ListBooks" Margin="10,105,0,88" Width="400" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top"></ListBox>

        <ProgressBar Margin="10,0" Width="780" Height="20" Name="ProgressBar" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsIndeterminate="True"></ProgressBar>

    </Grid>
</Window>
