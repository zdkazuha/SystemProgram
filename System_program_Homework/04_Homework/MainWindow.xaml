<Window x:Class="_04_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Margin="0,5" RenderTransformOrigin="0.499,0.503">Введіть текст ::</Label>
        <TextBox Name="TextLine" Width="600" Height="100" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,10,0,0" AcceptsReturn="True"></TextBox>

        <Button Click="Info" BorderBrush="Black" Margin="90,120,0,0" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">Info</Button>
        <Button Click="SaveInfoToFile" BorderBrush="Black" Margin="590,120,0,0" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">Save info to File</Button>

        <Label Margin="50,170,566,299" Height="25" Width="100">Information on the text ::</Label>
        <ListBox Name="InfoText" Margin="90,140,0,51" Width="600" Height="110" HorizontalAlignment="Left" BorderBrush="Black"/>
    </Grid>
</Window>
