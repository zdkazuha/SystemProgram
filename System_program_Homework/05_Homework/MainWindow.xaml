<Window x:Class="_05_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Width="270" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Foreground="Black">Введіть число факторіал якого хочете знайти ::</Label>
        <TextBox Width="200" Height="25" Name="NumberFactorial" Margin="10,30" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBox>
        <Button Click="Start" Margin="10,60" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left">Start</Button>

        <Label Margin="5,100" Width="400" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" >Список факторіалів :: </Label>
        <ListBox Margin="10,146,0,88" Width="400" Name="ListFactorial" HorizontalAlignment="Left"/>

        <ProgressBar Margin="10,0" Width="780" Height="20" Name="ProgressBar" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsIndeterminate="True"></ProgressBar>

    </Grid>
</Window>
