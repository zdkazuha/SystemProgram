<Window x:Class="_02_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>


        <Label Content="Введіть нижню  межу :" Margin="4,5,0,0" ></Label>
        <TextBox Name="LowerBoundTextBox" Margin="140,10,10,10" BorderBrush="Black" Width="150" Height="20"  HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label Content="Введіть верхню межу :" Margin="5,35"></Label>
        <TextBox Name="UpperBoundTextBox" Margin="140,40,10,10" BorderBrush="Black" Width="150" Height="20"  HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Label Content="Прості числа :" Margin="5,60"></Label>
        <ListBox Name="PrimeNumbersListBox" Margin="10,90" Width="200" HorizontalAlignment="Left" BorderBrush="Black"/>
        
        <Label Content="Числа Фібоначі :" Margin="280,60"></Label>
        <ListBox Name="FibonachiNumbersListBox" Margin="284,92,0,87" Width="200" HorizontalAlignment="Left" BorderBrush="Black"/>

        <Button Name="StartButton" Content="Старт" Click="StartButton_Click" Margin="10,300,0,0" Width="475" Height="20" HorizontalAlignment="Left"/>
        <Button Name="StopButton"  Content="Стоп простих чисел"  Click="StopButton_Click"  Margin="10,360,0,0" Width="200" Height="20" HorizontalAlignment="Left"/>
        <Button Name="StopButtonF" Content="Стоп чисел фібоначчі"  Click="StopButtonF_Click"  Margin="285,360,0,0" Width="200" Height="20" HorizontalAlignment="Left"/>
    </Grid>
</Window>
